@{

}
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<KhachSan.Models.Service>
<section class="services-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Khám phá dịch vụ </h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(var service in Model){
            <div class="col-lg-4 col-sm-6">
                <div>
                   <img src="@(service.image)" alt="">
                </div>
                <div class="service-item">
                    <a href="#">
                        <h4>@service.name</h4>
                        <p>@service.description</p>
                    </a>
                    <h5>@service.price VNĐ</h5><br/>
                        <a asp-controller="Cart" asp-action="AddService" asp-route-serviceId="@service.Id">Booking Now</a>
                </div>
            </div>
            }
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="room-pagination">
                    <a>@Html.PagedListPager(Model, page => Url.Action("Index", new {page = page}))</a>
                </div>
            </div>
        </div>
    </div>
</section>