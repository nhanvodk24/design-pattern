@{

}
@model KhachSan.ViewModel.SearchRoomViewModel
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Danh sách phòng</h2>
                    <div class="bt-option">
                        <a href="./index.html">Trang chủ</a>
                        <span>Phòng</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
    <div class="booking-form">
        <h3>Đặt chỗ trước</h3>
        <p>@TempData["Message"]</p>
        <form asp-controller="Room" asp-action="SearchResult" method="get">
            <div class="check-date">
                <label for="date-in">Check In:</label>
                <input asp-for="DateFrom" type="text" class="date-input" id="date-in">
                <i class="icon_calendar"></i>
            </div>
            <div class="check-date">
                <label for="date-out">Check Out:</label>
                <input asp-for="DateTo" type="text" class="date-input" id="date-out">
                <i class="icon_calendar"></i>
            </div>
            <div>
                <label for="noOfPeople">Số lượng người:</label>
                <input type ="number" asp-for="NoOfPeople" required/>
            </div>
            <button type="submit">Kiểm tra Tình trạng Phòng</button>
        </form>
    </div>
</div>
<section class="rooms-section spad">
    <div class="container">
        <div class="row">
            @if (Model != null)
            {
                @foreach (var room in Model.Room)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="room-item">
                            <img src="@(room.image)" alt="">
                            <div class="ri-text">
                                <h4>@room.name</h4>
                                <h3>@room.price VNĐ<span>/đêm</span></h3>
                                <table>
                                    <tbody>
                                        <tr>
                                            <td class="r-o">Số lượng tối đa:</td>
                                            <td>@room.numPeople</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <a asp-controller="Cart" asp-action="AddRoom" asp-route-roomId="@room.Id">Booking Now</a>
                            </div>
                        </div>
                    </div>
                }
            }
            <div class="col-lg-12">
                <div class="room-pagination">
                    
                </div>
            </div>
        </div>
    </div>
</section>