@model KhachSan.Models.User
<div class="main-signup">
    <section class="signup">
        <div class="container-signup">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Sign up</h2>
                    <form method="post" asp-controller="User" asp-action="Register" class="register-form" id="register-form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="label-signup" for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input asp-for="name" type="text" id="name" name="name" placeholder="Your Name" required/>
                        </div>
                        <div class="form-group">
                            <label class="label-signup" for="email"><i class="zmdi zmdi-email"></i></label>
                            <input asp-for="address" type="text" id="email" name="address" placeholder="Your Address" required />
                        </div>
                        <div class="form-group">
                            <label class="label-signup" for="phoneNumber"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input asp-for="username" type="tel" name="username" id="phoneNumber" placeholder="Your Phone Number" required/>
                        </div>
                        <div class="form-group">
                            <label class="label-signup" for="password"><i class="zmdi zmdi-lock"></i></label>
                            <input asp-for="password" type="password" name="password" id="password" placeholder="Password" required/>
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Đăng ký" />
                        </div>
                    </form>
                </div>
                <div class="signup-image">
                    <figure class="figure-signup"><img src="/img/signup-image.jpg" alt="sing up image"></figure>
                    <a asp-controller="User" asp-action="Login" class="signup-image-link">Bạn đã có tài khoản?</a>
                </div>
            </div>
        </div>
    </section>
</div>
